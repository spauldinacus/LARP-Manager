
{
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth/index.js"
    },
    {
      "source": "/api/characters/([^/]+)/experience",
      "destination": "/api/characters/[id]/experience.js?id=$1"
    },
    {
      "source": "/api/characters/([^/]+)/attendance-xp",
      "destination": "/api/characters/[id]/attendance-xp.js?id=$1"
    },
    {
      "source": "/api/characters/([^/]+)",
      "destination": "/api/characters/[id].js?id=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public"
}

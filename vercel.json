
{
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth/index.js"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin.js"
    },
    {
      "source": "/api/characters/(.*)",
      "destination": "/api/characters.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public"
}
